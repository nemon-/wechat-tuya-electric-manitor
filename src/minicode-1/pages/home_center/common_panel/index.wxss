/* miniprogram/pages/home_center/common_panel/index.js.wxss */

.common-panel-backgroud {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
	height: 320px;
	background-color: #650483;
}
.common-panel-navbar{
	color: rgb(0, 0, 0);
	background-color: #650483;
}


.common-panel-header {
  margin: 2%;
  z-index: 1;
  width: 96%;
  height: 256px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #650483;
  padding-top:20px;
  padding-bottom:20px;
}

.common-panel-header-block {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.common-panel-header-dpName {
	width: 160px;
  height: 25px;
  text-align: center;
	font-family: HelveticaNeue;
	font-size: 24px;
  line-height: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  margin-top:30px;
}

.common-panel-header-dpValue {
  font-family: DINCondensed-Bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
	font-size: 74px;
  
  border-radius: 100%;
  background-color: azure;
  color: #650483;
  width: 200px;
  height: 155px;
  padding-top: 45px;
}

.roDpItem-normal {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 54px;
  padding: 16px 2px;
}

.roDpItem-normal:not(:last-child) {
  border-right: solid 1px #d6d6d6;
}

.roDpItem-two {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 54px;
  padding: 16px 33px;
}

.roDpItem-two:not(:last-child) {
  border-right: solid 1px #d6d6d6;
}

.roDpItem-one {
  display: flex;
  align-items: center;
  flex: 1;
  height: 64px;
  padding: 20px 24px;
  background-color: #fff;
  border-radius: 14px;
}

.roDpItem-dpName {
  flex: 1;
  width: 115px;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  line-height: 24px;
  color: rgba(80, 80, 80, 0.5);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.roDpItem-status {
  width: 115px;
  text-align: center;
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  line-height: 24px;
  color: #505050;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.statuslist {
  padding-top: 16px;
  display: flex;
  justify-content: center;
  line-height: 12px;
  flex-wrap: wrap;
}

.scroll-view {
  _padding: 16px 8px;
  padding: 1%;
  width: auto;
  height: 100%;
  margin-top:-2%;
}

.statuslist-item{
  width: 48%;
  height: 120px;
  background-color: #650483;
  color: white;
  text-align: center;
  font-size: 30px;
  display: inline-block;
  _border-color: white;
  _border-width: 1px;
  _border-style: solid;
  margin: 1%;
}

.statuslist-item-btn{
  padding-top: 40px;
  
}
.statuslist-item-value{
  padding-top: 20px;
  font-size:16px;
}
.statuslist-item-label{
  padding-top: 10px;
  
}